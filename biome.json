{
	"$schema": "https://biomejs.dev/schemas/1.5.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noStaticOnlyClass": "off",
				"noForEach": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noRedeclare": "off"
			}
		},
		"ignore": ["*.md"]
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 2,
		"indentStyle": "tab",
		"lineEnding": "lf",
		"lineWidth": 80
	}
}
